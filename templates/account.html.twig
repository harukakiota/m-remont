<!-- uploaded files and form are shown in the same window -->
<div class="row">
    <div class="col-sm-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h5 class="panel-title">Изменение данных аккаунта</h5>
            </div>
            <div class="panel-body">
                <form id="account-form" action="{{path_for('post-account', {'user_id':account['user_id']})}}" class="form-horizontal">
                    <div class="form-group">
                        <label for="email" class="control-label col-sm-3">Электронная почта</label>
                        <div class="col-sm-9">
                            <input type="email" name="email" class="form-control" value="{{ account['email'] }}">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="password" class="control-label col-sm-3">Пароль</label>
                        <div class="col-sm-9">
                            <input class="form-control" type="password" id="password" name="password" minlength="8"/>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="passwordconfirm" class="control-label col-sm-3">Повторите пароль</label>
                        <div class="col-sm-9">
                            <input class="form-control" type="password" id="passwordconfirm" name="passwordconfirm" minlength="8"/>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="surname" class="control-label col-sm-3">Фамилия</label>
                        <div class="col-sm-9">
                            <input type="text" name="surname" class="form-control" value="{{ account['surname'] }}">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="name" class="control-label col-sm-3">Имя</label>
                        <div class="col-sm-9">
                            <input type="text" name="name" class="form-control" value="{{ account['name'] }}">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="father_name" class="control-label col-sm-3">Отчество</label>
                        <div class="col-sm-9">
                            <input type="text" name="father_name" class="form-control" value="{{ account['father_name'] }}">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="phone" class="control-label col-sm-3">Телефон</label>
                        <div class="col-sm-9">
                            <input type="tel" name="phone" class="form-control" value="{{ account['phone'] }}">
                        </div>
                    </div>
                    {% if user_type != 'user' %}
                    <hr />
                    <div class="form-group">
                        <div class="col-sm-6">
                            <label for="type" class="control-label col-sm-3">Тип</label>
                            <div class="col-sm-9">
                                <select class="form-control" name="type">
                                    <option value="1" {{ account['type'] == 'user' ? 'selected'}}>Пользователь</option>
                                    <option value="2" {{ account['type'] == 'admin' ? 'selected'}}>Администратор</option>
                                    {% if user_type == 'superadmin' %}
                                    <option value="3" {{ account['type'] == 'superadmin' ? 'selected'}}>Суперадминистратор</option>
                                    {% endif %}
                                </select>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <label for="active" class="control-label col-sm-3">Статус</label>
                            <div class="col-sm-9">
                                <select class="form-control" name="active">
                                    <option value="1" {{ account['active'] == 1 ? 'selected'}}>Активен</option>
                                    <option value="0" {{ account['active'] == 0 ? 'selected'}}>Неактивен</option>
                                </select>
                            </div>
                        </div>
                    </div>
                    {% endif %}
                    <div class="form-group">
                        <div class="col-sm-12">
                            <div class="alert alert-account hidden" role="alert">
                                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                        </div>
                    </div>                    
                    <div class="form-group">
                        <div class="col-sm-offset-9 col-sm-2">
                            <button class="btn btn-block btn-success" id="btn-account-submit">Сохранить</label>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>